{
    "name": "portfolio-site",
    "version": "1.0.0",
    "private": true,
    "description": "Static AI engineer portfolio site",
    "type": "module",
    "ciCacheBust": "2025-09-07-1",
    "scripts": {
        "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
        "build:css": "tailwindcss -c tailwind.config.js -i ./src/styles/main.css -o ./dist/style.css --minify",
        "build:css:legacy": "tailwindcss -c tailwind.config.js -i ./css/style.css -o ./dist/style.css --minify",
        "build:js": "node ./scripts/build.mjs",
        "build:new": "node ./scripts/build-ultra-reliable.mjs",
        "fix:html": "node ./scripts/fix-html-references.mjs",
        "verify:build": "node ./scripts/verify-build.mjs",
        "watch:css": "tailwindcss -c tailwind.config.js -i ./src/styles/main.css -o ./dist/style.css --watch",
        "build": "npm run build:new",
        "build:legacy": "npm run build:css:legacy && npm run build:js",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "vercel-build": "npm run build:prod",
        "validate:content": "node ./scripts/validate-content.mjs",
        "export": "node ./scripts/build-export.mjs",
        "postbuild": "npm run fix:html && npm run verify:build && npm run export && echo Build complete",
        "dev": "node ./scripts/dev-server.mjs",
        "dev:legacy": "concurrently -k -n CSS,WEB -c cyan,magenta \"npm:watch:css\" \"serve -l 5500\"",
        "prepare": "npx husky install",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "optimize:images": "node ./scripts/optimize-images.mjs",
        "lighthouse": "node ./scripts/run-lh.mjs",
        "browserslist:update": "npx update-browserslist-db@latest --update-db",
        "test": "echo \"No tests specified yet\" && exit 0",
        "clean": "rimraf dist/*",
        "preview": "npm run build:prod && serve -s . -l 3000",
        "smoke:api": "node ./scripts/smoke-api.mjs"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.3.0",
        "ajv": "^8.17.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.9.0",
        "eslint-plugin-import": "^2.29.1",
        "husky": "^9.1.7",
        "lighthouse": "^12.1.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8.4.41",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "serve": "^14.2.0",
        "sharp": "^0.33.5",
        "tailwindcss": "^3.4.10",
        "three": "^0.180.0"
    },
    "lint-staged": {
        "*.{html,css,js,json,md}": [
            "prettier --write"
        ]
    }
}
