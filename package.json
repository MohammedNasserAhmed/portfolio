{
    "name": "portfolio-site",
    "version": "1.0.0",
    "private": true,
    "description": "Static AI engineer portfolio site",
    "scripts": {
        "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
        "build:css": "tailwindcss -c tailwind.config.js -i ./css/style.css -o ./dist/style.css --minify",
        "build:js": "node ./scripts/build.mjs",
        "watch:css": "tailwindcss -c tailwind.config.js -i ./css/style.css -o ./dist/style.css --watch",
        "build": "npm run build:css && npm run build:js",
        "validate:content": "node ./scripts/validate-content.mjs",
        "postbuild": "echo Build complete",
        "dev": "concurrently -k -n CSS,WEB -c cyan,magenta \"npm:watch:css\" \"serve -l 5500\"",
        "prepare": "husky install",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix",
        "optimize:images": "node ./scripts/optimize-images.mjs",
        "lighthouse": "node ./scripts/run-lh.mjs"
    },
    "devDependencies": {
        "ajv": "^8.17.1",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.3.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "eslint": "^9.9.0",
        "eslint-plugin-import": "^2.29.1",
        "husky": "^9.0.11",
        "lighthouse": "^12.1.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8.4.41",
        "prettier": "^3.2.5",
        "serve": "^14.2.0",
        "sharp": "^0.33.5",
        "tailwindcss": "^3.4.10",
        "three": "^0.180.0"
    },
    "lint-staged": {
        "*.{html,css,js,json,md}": [
            "prettier --write"
        ]
    }
}
