{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/portfolio-content.schema.json",
    "title": "PortfolioContent",
    "type": "object",
    "additionalProperties": false,
    "required": ["summary", "projects", "skills", "publications"],
    "properties": {
        "summary": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "body"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "body": { "type": "string", "minLength": 1 }
                }
            }
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "image", "description"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "image": { "type": "string", "minLength": 1 },
                    "description": { "type": "string", "minLength": 1 },
                    "githubUrl": { "type": "string", "minLength": 1 },
                    "tech": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                }
            }
        },
        "skills": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "image", "published", "description", "link"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "image": { "type": "string", "minLength": 1 },
                    "published": { "type": "string", "minLength": 1 },
                    "description": { "type": "string", "minLength": 1 },
                    "link": { "type": "string", "minLength": 1 }
                }
            }
        }
    }
}
