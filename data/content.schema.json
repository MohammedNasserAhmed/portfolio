{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/portfolio-content.schema.json",
    "title": "PortfolioContent",
    "type": "object",
    "additionalProperties": false,
    "required": ["summary", "projects", "skills", "publications"],
    "properties": {
        "summary": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "body"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "body": { "type": "string", "minLength": 1 }
                }
            }
        },
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "image", "description"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "image": { "type": "string", "minLength": 1 },
                    "description": { "type": "string", "minLength": 1 },
                    "githubUrl": { "type": "string", "minLength": 1 },
                    "tech": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                }
            }
        },
        "skills": {
            "type": "array",
            "items": {
                "oneOf": [
                    { "type": "string", "minLength": 1 },
                    {
                        "type": "object",
                        "required": ["name", "percent"],
                        "additionalProperties": false,
                        "properties": {
                            "name": { "type": "string", "minLength": 1 },
                            "percent": { "type": "number", "minimum": 0, "maximum": 100 },
                            "category": { "type": "string" },
                            "level": { "type": "string" },
                            "xp": { "type": "string" }
                        }
                    }
                ]
            }
        },
        "publications": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["title", "image", "published", "description", "link"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "image": { "type": "string", "minLength": 1 },
                    "published": { "type": "string", "minLength": 1 },
                    "description": { "type": "string", "minLength": 1 },
                    "link": { "type": "string", "minLength": 1 }
                }
            }
        },
        "outreach": {
            "type": "array",
            "description": "Training / Conferences / Outreach engagements",
            "items": {
                "type": "object",
                "required": ["title", "date", "type"],
                "additionalProperties": false,
                "properties": {
                    "title": { "type": "string", "minLength": 1 },
                    "type": { "type": "string", "minLength": 1 },
                    "date": { "type": "string", "minLength": 1 },
                    "location": { "type": "string" },
                    "audience": { "type": "string" },
                    "description": { "type": "string" },
                    "link": { "type": "string" },
                    "slides": { "type": "string" },
                    "image": { "type": "string" }
                }
            }
        }
    }
}
