{
    "version": 2,
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "functions": {
        "api/**/*.js": {
            "runtime": "nodejs20.x",
            "maxDuration": 10,
            "memory": 128
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [{ "key": "Cache-Control", "value": "public, max-age=600" }]
        }
    ]
}
